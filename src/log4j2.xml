<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>

        <File name="FileAppender" fileName="logs/application.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
        </File>

        <SMTP name="EmailAppender"
              subject="CRITICAL ERROR: Салати"
              to="my_2_email@gmail.com" from="my_1_email@gmail.com"
              smtpHost="smtp.gmail.com" smtpPort="465"
              smtpUsername="my_1_email@gmail.com"
              smtpPassword="app_pass" smtpProtocol="smtps"
              bufferSize="1">
            <Property name="mail.smtp.starttls.enable">true</Property>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n"/>
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
        </SMTP>

    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="EmailAppender"/>
        </Root>
    </Loggers>
</Configuration>